<body>

<div class="container">
    <h2>
        Rekapitulasi Siswa Masuk
        <button class="refresh-btn" onclick="muatData()">Perbarui Data</button>
    </h2>

    <div class="stats">
        <div class="stat-card">Total Hadir <span id="total-hadir">0</span></div>
        <div class="stat-card">Update Terakhir <span id="last-update" style="font-size: 1rem;">-</span></div>
    </div>

    <table>
        <thead>
            <tr>
                <th>Jam Masuk</th>
                <th>Nama Siswa</th>
                <th>NIS</th>
                <th>Kelas</th>
            </tr>
        </thead>
        <tbody id="tabel-body">
            <tr><td colspan="4" style="text-align:center;">Memuat data...</td></tr>
        </tbody>
    </table>
</div>

<script>
    const SCRIPT_URL = "URL_WEB_APP_ANDA"; // Masukkan URL Web App Google Script Anda

    async function muatData() {
        try {
            const response = await fetch(SCRIPT_URL + "?action=read");
            const data = await response.json();
            
            const tbody = document.getElementById('tabel-body');
            tbody.innerHTML = "";
            
            // Balik urutan agar yang terbaru di atas
            data.reverse().forEach(row => {
                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td>${row[0]}</td>
                    <td><b>${row[1]}</b></td>
                    <td>${row[2]}</td>
                    <td>${row[3]}</td>
                `;
                tbody.appendChild(tr);
            });

            document.getElementById('total-hadir').innerText = data.length;
            document.getElementById('last-update').innerText = new Date().toLocaleTimeString();
        } catch (err) {
            console.error("Gagal muat data:", err);
            document.getElementById('tabel-body').innerHTML = "<tr><td colspan='4' style='color:red; text-align:center;'>Gagal mengambil data. Cek SCRIPT_URL atau koneksi.</td></tr>";
        }
    }

    // Muat data otomatis saat halaman dibuka
    muatData();
    // Refresh otomatis setiap 30 detik
    setInterval(muatData, 30000);
</script>

</body>
</html>